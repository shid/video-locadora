@model video_locadora.Models.MultList
@{
    ViewBag.Title = "Adicionar";
}

@using (Html.BeginForm("Salvar", "Filme", FormMethod.Post, new { @class = "form-signin" }))
{
    <h1 class="h3 mb-3">Adicionar Filme</h1>

    <div class="form-group">
        @Html.TextBoxFor(f => f.Filme.Nome, null, new { @class = "form-control", placeholder = "Nome do Filme", autocomplete = "off", required = "required" })
        @Html.ValidationMessageFor(f => f.Filme.Nome, "", new { @class = "validation-error" })
    </div>
    <div class="form-group">
        @Html.DropDownListFor(f => f.Filme.Genero_Id, new SelectList(Model.Generos, "Id", "Nome"), "Selecione o Genero", new { id = "Genero_Id", @class = "form-control", required = "required" })
        @Html.ValidationMessageFor(f => f.Filme.Genero_Id, "", new { @class = "validation-error" })
    </div>
    <div class="form-group">
        <input data-val="true" data-val-required="The Ativo field is required." id="Ativo" name="Ativo" type="checkbox" value="true">
        @Html.Label("Ativo", new { @class = "form-check-label" })
    </div>

    <div class="form-row">
        <div class="col">
            <button class="btn btn-sm btn-secondary btn-block" onclick="location.href='@Url.Action("Index" , "Filme")'; return false;">Cancelar</button>
        </div>
        <div class="col">
            <button class="btn btn-sm btn-primary btn-block" type="submit">Salvar</button>
        </div>
    </div>
}